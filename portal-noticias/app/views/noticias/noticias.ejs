<!DOCTYPE HTML>
<html lang="pt-br">

<%- include('../head.ejs'); %>

<body>

	<%- include('../menu.ejs'); %>



	<% if (noticias!=null) { -%>
	<div class="container">
		<div class="row">

			<% if (noticias.length>0) { -%>

			<% for (var i = 0; i < noticias.length; i++) { -%>
			<div class="col-md-6 mb-4">


				<div class="noticia_wrapper" >
					<img class="card-img-top" src="https://goo.gl/xzU1w9" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title"><%=noticias[i].titulo %></h5>
						<p class="card-text"><%=noticias[i].data_noticia %></p>
						<p class="card-text"><%=noticias[i].resumo %></p>
						<a href="noticia?news=<%=noticias[i].id_noticia %>" class="btn btn-primary">Ver notícia</a>
					</div>
				</div>

			</div>
			<% } -%>

			<% }-%>
		</div>
	</div>
	<% } else { -%>
	<%- include('../pageError.ejs',{msg:'Não foi possível exibir as notícias  :('})%>
	<% } -%>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
</body>
</html>